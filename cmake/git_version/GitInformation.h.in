#ifndef __recbesim_GitInformation_h__
#define __recbesim_GitInformation_h__

#include <string>

namespace recbesim {
    class GitInformation {
      public:
        GitInformation(const GitInformation &)            = delete;
        GitInformation &operator=(const GitInformation &) = delete;
        GitInformation(GitInformation &&)                 = delete;
        GitInformation &operator=(GitInformation &&)      = delete;

        const std::string cGitHash     = "@GIT_SHA@";
        const std::string cGitDescribe = "@GIT_DESCRIBE@";
        const std::string cGitBranch   = "@GIT_BRANCH@";

        std::string GetHash() const { return cGitHash; }
        std::string GetDescription() const { return cGitDescribe; }
        std::string GetBranch() const { return cGitBranch; }

        static GitInformation &GetInstance() {
            static GitInformation fgInstance;
            return fgInstance;
        }

      private:
        GitInformation() = default;
    };
} // namespace recbesim

#endif
